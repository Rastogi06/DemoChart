@model  DemoChart.Models.Register

@{
    ViewBag.Title = "Register";
}

<head>
    <link rel="stylesheet" type="text/css" href="~/Content/css/Styles.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/font-awesome.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <div id="imgbg">
        <img class="source-image" src="~/Content/Images/back1.jpg" />
    </div>

</body>
<div class="headtitle">
    <h1 class="heading">Welcome to Corporate Cafe</h1>
    <br />
</div>

<div class="registerForm">
    @using (Html.BeginForm("SaveRegisterDetails", "Account"))
    {
        <div style="color:red;">@Html.ValidationSummary()</div>
        <div class="row">
            <!--Show details are saved successfully message-->
            <div class="col-lg-12">@ViewBag.Message</div>
        </div><br />
        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.FirstName) &nbsp;<i class="fa fa-user" aria-hidden="true"></i></div>
            <div class="col-lg-10">@Html.TextBoxFor(a => a.FirstName, new { @class = "form-control" })</div>
        </div><br />
        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.LastName) &nbsp;<i class="fa fa-user" aria-hidden="true"></i></div>
            <div class="col-lg-10">@Html.TextBoxFor(a => a.LastName, new { @class = "form-control" })</div>
        </div><br />
        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.Email) &nbsp;<i class="fa fa-envelope" aria-hidden="true"></i></div>
            <div class="col-lg-10">@Html.TextBoxFor(a => a.Email, new { @class = "form-control" })</div>
        </div><br />
        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.Password) &nbsp;<i class="fa fa-key" aria-hidden="true"></i></div>
            <div class="col-lg-10">@Html.TextBoxFor(a => a.Password, new { @class = "form-control", type = "Password" })</div>
        </div><br /><br />
              <div class="btnsubmit">
                  <input type="submit" value="Register" class="btn btn-primary" />
              </div>
    }

</div>